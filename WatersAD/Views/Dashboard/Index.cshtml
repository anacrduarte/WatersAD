    <div class="container">
        <div class="row">
           

                    <div class="col-lg-6 col-12">
                        <div class="section-bg-image-block">
                            <h2 class="mb-lg-3">Notifações</h2>
                    @if (Model.Any())
                    {
                        <p> Tem @Model.Count() notificações</p>
                        @foreach (var item in Model)
