@model WatersAD.Models.ChangeRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>
<flash dismissable="true" />


<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentRole)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentRole)
            </dd>
         

        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="UserName" />

           
            <div class="form-group">
                <label asp-for="SelectedRole" class="control-label"></label>
                <select asp-for="SelectedRole" asp-items="Model.Roles" class="form-control"></select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

