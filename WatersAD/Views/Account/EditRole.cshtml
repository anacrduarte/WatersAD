@model WatersAD.Models.ChangeRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">
                        <flash dismissable="true" />
                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Alterar role</h2>
                            <p class="text-center">Utilizador @Model.UserName</p>
                            <p class="text-center">Role actual: @Model.CurrentRole</p>


                        </div>
                        <div class="col-lg-6 col-12 mx-auto">

                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="EditRole" method="post">
                                <input type="hidden" asp-for="UserName" />
                                <input type="hidden" asp-for="CurrentRole" />
                                
                                    <h4 class="text-white mb-4">Alterar tipo de role</h4>
                                 
                                
                                <div class="row g-6">
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <select asp-for="SelectedRole" asp-items="Model.Roles" class="form-control" placeholder="Role" required></select>
                                            <label asp-for="SelectedRole">Role</label>

                                        </div>
                                    </div>

                                 
                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>


        </div>
    </div>
</section>

