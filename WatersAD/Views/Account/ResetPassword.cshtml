@model WatersAD.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}
<section class="hero-section hero-sectionRecover d-flex justify-content-center align-items-center" id="section_1">
    <flash dismissable="true" />
    <div class="section-overlay"></div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#3D405B" fill-opacity="1" d="M0,224L34.3,192C68.6,160,137,96,206,90.7C274.3,85,343,139,411,144C480,149,549,107,617,122.7C685.7,139,754,213,823,240C891.4,267,960,245,1029,224C1097.1,203,1166,181,1234,160C1302.9,139,1371,117,1406,106.7L1440,96L1440,0L1405.7,0C1371.4,0,1303,0,1234,0C1165.7,0,1097,0,1029,0C960,0,891,0,823,0C754.3,0,686,0,617,0C548.6,0,480,0,411,0C342.9,0,274,0,206,0C137.1,0,69,0,34,0L0,0Z"></path></svg>


    <div class="container">
                <div class="row">
                    <section>
                        <div class="container">
                            <div class="row">
                                <flash dismissable="true" />
                                <div class="col-lg-12 col-12  mx-auto mb-lg-5 mb-4">
                                    
                                    <h2>Alterar palavra-passe</h2>



                                </div>
                                <div class="col-lg-5 col-12 mx-auto">

                                    <form class="custom-form membership-form shadow-lg" role="form" asp-action="ResetPassword"  method="post">
                                        <input type="hidden" asp-for="Token" />
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="text-white mb-4">Alterar palavra-passe</h5>
                                            
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <input type="email" asp-for="UserName" class="form-control" placeholder="Email" required>
                                                <label asp-for="UserName"></label>

                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <input type="password" asp-for="Password" class="form-control" placeholder="Palavra-passe" required>
                                                <label asp-for="Password"></label>

                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-floating">
                                                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar palavra-passe" required>
                                                <label asp-for="ConfirmPassword"></label>

                                            </div>
                                        </div>

                                        <button type="submit" class="form-control mt-4">Alterar palavra-passe</button>


                                    </form>
                                </div>

                            </div>
                        </div>
                    </section>


                </div>
            </div>
   

