@model WatersAD.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
}



<h2>Recuperação da Palavra-passe</h2>
<flash dismissable="true" />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Recuperação da Palavra-passe" class="btn btn-outline-primary" />
                <a asp-action="Login" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}