@model WatersAD.Models.ShowConsumptionsViewModel
@{
    ViewData["Title"] = "ShowConsumptions";
    var cssClass = Model.WaterMeters.Count() > 4 ? "hero-section4" : "hero-section3";
    var currentDay = DateTime.Now.Day;
    var cssClass2 = Model.WaterMeters.Count() == 1 ? "col-lg-12" : "col-lg-6";
}

<section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
    <flash dismissable="true" />

    <div class="section-overlay"></div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#3D405B" fill-opacity="1" d="M0,224L34.3,192C68.6,160,137,96,206,90.7C274.3,85,343,139,411,144C480,149,549,107,617,122.7C685.7,139,754,213,823,240C891.4,267,960,245,1029,224C1097.1,203,1166,181,1234,160C1302.9,139,1371,117,1406,106.7L1440,96L1440,0L1405.7,0C1371.4,0,1303,0,1234,0C1165.7,0,1097,0,1029,0C960,0,891,0,823,0C754.3,0,686,0,617,0C548.6,0,480,0,411,0C342.9,0,274,0,206,0C137.1,0,69,0,34,0L0,0Z"></path></svg>

    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                <h2 class="text-white">Bem-vindo</h2>

                <h1 class="cd-headline rotate-1 text-white mb-4 pb-2">
                    <span>A. Duarte é</span>
                    <span class="cd-words-wrapper">
                        <b class="is-visible">Fonte de Vida</b>
                        <b>Inovação</b>
                        <b>Progresso</b>
                    </span>
                </h1>

                <div class="custom-btn-group">
                    <a asp-area="" asp-controller="Home" asp-action="About" class="btn custom-btn smoothscroll me-3">Sobre nós</a>

                    <a asp-area="" asp-controller="WaterMeters" asp-action="RequestWaterMeterClient" asp-route-id="@Model.ClientId" class="link smoothscroll">Pedir contador</a>
                </div>
            </div>

        </div>
    </div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,224L34.3,192C68.6,160,137,96,206,90.7C274.3,85,343,139,411,144C480,149,549,107,617,122.7C685.7,139,754,213,823,240C891.4,267,960,245,1029,224C1097.1,203,1166,181,1234,160C1302.9,139,1371,117,1406,106.7L1440,96L1440,320L1405.7,320C1371.4,320,1303,320,1234,320C1165.7,320,1097,320,1029,320C960,320,891,320,823,320C754.3,320,686,320,617,320C548.6,320,480,320,411,320C342.9,320,274,320,206,320C137.1,320,69,320,34,320L0,320Z"></path></svg>
</section>

<section class="about-section section-padding @cssClass">

    <div class="col-lg-12 col-12">
        <h2 class="text-center" >Contadores/Consumos</h2>
        <p class="text-center">Pode inserir consumos entre o dia 1 e 10 de cada mês.</p>
    </div>
    <br />
        <div class="container">
            <div class="row">
        @foreach (var waterMeter in Model.WaterMeters)
        {
           <div class="@cssClass2 col-12 me-auto mb-4 mb-lg-0 ">
            <div class="table-responsive tablePading">
                        <p class="text-center"> Número de série do contador:
                            @waterMeter.WaterMeterService.SerialNumber
                        </p>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th style="width: 22%;">Morada</th>
                            <th style="width: 34%;">Data da Leitura</th>
                            <th style="width: 22%;">Valor do Consumo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (waterMeter.Consumptions != null && waterMeter.Consumptions.Any())
                        {
                            foreach (var consumption in waterMeter.Consumptions.Take(5))
                            {
                                <tr>
                                    <td>@waterMeter.Address</td>
                                    <td>@consumption.ConsumptionDate.ToString("dd/MM/yyyy")</td>
                                            <td>@consumption.ConsumptionValue
                                              
                                            </td>
                                        </tr>
                            }
                                 
                        }
                   
                    </tbody>
                </table>
                        <div class="col-lg-3 col-12 ms-auto custom-btn-group">
                            
                            <ul class="social-icon mt-lg-5 mt-3 mb-4">
                                @if (currentDay >= 1 && currentDay <= 10)
                                {
                                <a asp-area="" asp-controller="Consumptions" asp-action="Create" asp-route-clientId="@Model.ClientId" asp-route-waterMeterId="@waterMeter.Id" class="btn custom-btn smoothscroll me-3 bi bi-plus-circle"> Leitura </a>
                                }
                                  
                            </ul>


                        </div>
            </div>
            </div>
        }
            </div>
        </div>

   

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 

}