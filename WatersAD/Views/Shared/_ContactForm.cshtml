@model WatersAD.Models.ContactViewModel


  <form asp-controller="Contact" asp-action="SendContactForm" method="post" class="custom-form contact-form" role="form">
            <h2 class="mb-4 pb-2">Contacte-nos</h2>

            <div class="row">
                    <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-floating">
                    <input type="text" asp-for="FullName" class="form-control" placeholder="Full Name" required>
                    <label for="floatingInput">Nome Completo</label>
                    </div>
                    </div>

                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="form-floating">
                                <input type="email" asp-for="Email" class="form-control" placeholder="Endereço Email" required>
                                <label for="Email">Endereço Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    <div class="col-lg-12 col-12">
                    <div class="form-floating">
                    <textarea class="form-control" asp-for="Message" name="message" placeholder="Describe message here" required></textarea>
                    <label for="floatingTextarea">Mensagem</label>
                    </div>

                    <button type="submit" class="form-control">Enviar Mensagem</button>
                    </div>
            </div>
    </form>
