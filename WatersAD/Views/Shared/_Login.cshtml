@model WatersAD.Models.LoginViewModel



    <div class="offcanvas-body d-flex flex-column">
        <form class="custom-form member-login-form" asp-controller="Account" asp-action="Login" method="post" role="form">

            <div class="member-login-form-body">
                <div class="mb-4">
                    <label class="form-label mb-2" asp-for="UserName">Email</label>
                    <input asp-for="UserName" type="text"  id="member-login-number" class="form-control" placeholder="exemplo@email.com" required>
                    <span asp-validation-for="UserName" class="text-warning"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label mb-2" asp-for="Password">Palavra-passe</label>

                    <input asp-for="Password" type="password"  id="member-login-password" pattern="[0-9a-zA-Z]{4,10}" class="form-control" placeholder="Palavra-passe" required>
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">

                    <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault">
                        Lembrar-me
                    </label>
                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                </div>

                <div class="col-lg-5 col-md-7 col-8 mx-auto">
                    <button type="submit" value="Login" class="form-control">Login</button>
                </div>

               
            </div>
        </form>
    <div class="text-center my-4">
        <a asp-controller="Account" asp-action="RecoverPassword">Esqueceu a password?</a>
    </div>

    <div class="mt-auto mb-5 text-center">
            <p>
            <strong class="text-white me-3">Alguma pergunta?</strong>

            <a href="tel: 912 345 678" class="contact-link">
                (+351)
                912 345 678
                </a>
            </p>
        </div>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
