
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WatersAD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WatersAD.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WatersAD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Consumptions" asp-action="Index">Consumptions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Invoices" asp-action="Index">Invoices</a>
                        </li>

                        
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tiers" asp-action="Index">Tiers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register New Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Countries" asp-action="Index">Countries</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Customer</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">Customer</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="FormerClients">Former Customer</a></li>

                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Employee</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="Index">Employee</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="FormerEmployees">Former Employee</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Employees" asp-action="GetAllEmployees">All Employees</a></li>

                                </ul>
                            </li>
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Water Meter</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="WaterMeters" asp-action="Index">Em uso</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="WaterMeters" asp-action="DetailsWaterServices">Water Meter</a></li>
                                   
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Roles</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeRole" asp-route-role="Admin">Admin</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeRole" asp-route-role="Employee">Employee</a></li>
                                    <li>  <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeRole" asp-route-role="Customer">Customer</a></li>
                                </ul>
                            </li>
                          
                        }
                    </ul>
                    <ul class="nav navbar-nav navbar-rigth">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"> 
                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                    @this.User.Identity.Name
                                    </a>
                            </li>
                         
                           @*  <li class="nav-item">
                                <img src="@Url.Content(ViewBag.ImageUser)" alt="Imagem do Usuário" />
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
           
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WatersAD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
