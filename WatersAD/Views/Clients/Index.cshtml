@model IEnumerable<WatersAD.Data.Entities.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<flash dismissable="true" />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locality.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberWaterMeters)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locality.Name)
                </td>
                <td>@if(item.NumberWaterMeters > 0)
                    {
                        <a asp-action="ClientWaterMetersDetails" asp-route-id="@item.Id">
                            @item.NumberWaterMeters
                        </a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.NumberWaterMeters)
                    }

                    
                </td>
               
            <td>
                    <a asp-action="UpdateClientEmail" asp-route-id="@item.Id">ChangeEmail</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="AddWaterMeterToClient" asp-route-id="@item.Id">Add Water Meter</a>
                    <a asp-action="Delete" data-id="@item.Id" asp-route-id="@item.Id" id="btnDelete">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>

            </div>
            <div class="modal-body">
                <p>Do you want to remove this customer?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Remove</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {

            var id = 0;

            $('a[id*=btnDelete]').click(function () {
                debugger;
                id = $(this).data("id"); /* $(this).parent()[0].id; */
                $("#deleteDialog").modal('show');
                return false;
            });

            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide');
                return false;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Clients/Delete/' + id;
            });

        });
    </script>
}


