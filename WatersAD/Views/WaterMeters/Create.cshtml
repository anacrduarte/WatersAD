@model WatersAD.Models.WaterMeterViewModel
@{
    ViewData["Title"] = "Create";
}
<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Adicionar contador</h2>
                            <p class="text-center">@Model.Client.FullName</p>


                        </div>
                        <div class="col-lg-6 col-12 mx-auto">
                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="Create" method="post">
                                <input type="hidden" asp-for="ClientId" />


                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-white mb-4">Dados do local de instalação</h4>
                                    <a asp-action="Index" asp-controller="Clients" class="btn custom-btn smoothscroll mb-4">Voltar</a>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="Address" class="form-control" placeholder="Rua" required>
                                            <label asp-for="Address">Rua</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="HouseNumber" class="form-control" placeholder="Nº" required>
                                            <label asp-for="HouseNumber">Nº</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="PostalCode" class="form-control" placeholder="Codigo-Postal" required>
                                            <label asp-for="PostalCode">Codigo-Postal</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="RemainPostalCode" class="form-control" placeholder="" required>
                                            <label asp-for="RemainPostalCode">Codigo-Postal</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CountryId" asp-items="Model.Countries" class="form-control" id="CountryId" required></select>
                                            <label asp-for="CountryId">País</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CityId" asp-items="Model.Cities" class="form-control" id="CityId" required></select>
                                            <label asp-for="CityId">Cidade</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="LocalityId" asp-items="Model.Localities" class="form-control" id="LocalityId" required></select>
                                            <label asp-for="LocalityId">Localidade</label>

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="WaterMeterServicesId" asp-items="Model.WaterMeterServices" class="form-control" id="WaterMeterServicesId" required></select>
                                            <label asp-for="WaterMeterServicesId">Contador</label>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="InstallationDate" class="form-control" placeholder="Data de instalação" required>
                                            <label asp-for="InstallationDate">Data de instalação</label>

                                        </div>
                                    </div>


                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>


        </div>
    </div>
</section>




@section Scripts {

    @{
        await Html.RenderPartialAsync("_SelectCountryCityLocality");
    }

}

