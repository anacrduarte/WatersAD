@model WatersAD.Models.RequestWaterMeterViewModel

<section class="hero-section hero-section2  d-flex justify-content-center align-items-center" id="section_1">
    <flash dismissable="true" />

    <div class="section-overlay"></div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#3D405B" fill-opacity="1" d="M0,224L34.3,192C68.6,160,137,96,206,90.7C274.3,85,343,139,411,144C480,149,549,107,617,122.7C685.7,139,754,213,823,240C891.4,267,960,245,1029,224C1097.1,203,1166,181,1234,160C1302.9,139,1371,117,1406,106.7L1440,96L1440,0L1405.7,0C1371.4,0,1303,0,1234,0C1165.7,0,1097,0,1029,0C960,0,891,0,823,0C754.3,0,686,0,617,0C548.6,0,480,0,411,0C342.9,0,274,0,206,0C137.1,0,69,0,34,0L0,0Z"></path></svg>

    <div class="container">
        <div class="row">
            <section class="membership-section section-padding" id="section_3">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class=" text-white"><span>Pedido</span> de contador</h2>
                        </div>

                        <div class="col-lg-8 col-12 mx-auto">

                            <form method="post" class="custom-form membership-form shadow-lg" role="form" asp-action="RequestWaterMeter" asp-controller="WaterMeters">
                                <h4 class="text-white mb-4">Dados pessoais</h4>
                                <div class="row g-3">
                                  
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="FirstName" id="first-name" class="form-control" placeholder="Nome próprio" required>
                                            <label asp-for="FirstName">Nome próprio</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="LastName" id="last-name" class="form-control" placeholder="Apelido" required>
                                            <label asp-for="LastName">Apelido</label>
                                        </div>
                                    </div>

                                </div>

                             
                                <div class="row g-3 mt-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="email" asp-for="Email" id="email" class="form-control" placeholder="Email" required>
                                            <label asp-for="Email">Email</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="PhoneNumber" id="phone" class="form-control" placeholder="Nº Telefone" required>
                                            <label asp-for="PhoneNumber">Nº Telefone</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3 mt-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="NIF" id="NIF" class="form-control" placeholder="NIF" required>
                                            <label asp-for="NIF">NIF</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="Address" class="form-control" placeholder="Rua" required>
                                            <label asp-for="Address">Rua</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="HouseNumber" class="form-control" placeholder="Nº" required>
                                            <label asp-for="HouseNumber">Nº</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="PostalCode" class="form-control" placeholder="Código-Postal" required>
                                            <label asp-for="PostalCode">Código-Postal</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="RemainPostalCode" class="form-control" placeholder="" required>
                                            <label asp-for="RemainPostalCode">Código-Postal</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CountryId" asp-items="Model.Countries" class="form-control" id="CountryId"></select>
                                            <label asp-for="CountryId">País</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CityId" asp-items="Model.Cities" class="form-control" id="CityId"></select>
                                            <label asp-for="CityId">Cidade</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="LocalityId" asp-items="Model.Localities" class="form-control" id="LocalityId"></select>
                                            <label asp-for="LocalityId">Localidade</label>
                                        </div>
                                    </div>
                                  
                                
                                </div>
                             
                                <h4 class="text-white mt-4 mb-4">Dados do contador</h4>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="AddressWaterMeter" id="contador-number" class="form-control" placeholder="Rua do contador" required>
                                            <label asp-for="AddressWaterMeter">Rua</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="HouseNumberWaterMeter" id="contador-address" class="form-control" placeholder="Nº " required>
                                            <label asp-for="HouseNumberWaterMeter">Nº</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="PostalCodeWaterMeter" class="form-control" placeholder="Codigo-Postal" required>
                                            <label asp-for="PostalCodeWaterMeter">Código-Postal</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" asp-for="RemainPostalCodeWaterMeter" class="form-control" placeholder="" required>
                                            <label asp-for="RemainPostalCodeWaterMeter">Código-Postal</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CountryWaterMeterId" asp-items="Model.Countries" class="form-control" id="MeterCountryId"></select>
                                            <label asp-for="CountryWaterMeterId">País</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="CityWaterMeterId" asp-items="Model.Cities" class="form-control" id="MeterCityId"></select>
                                            <label asp-for="CityWaterMeterId">Cidade</label>
                                        </div>
                                    </div>
                                </div>


                            
                             
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="LocalityWaterMeterId" asp-items="Model.Localities" class="form-control" id="MeterLocalityId"></select>
                                        <label asp-for="LocalityWaterMeterId">Localidade</label>
                                    </div>
                                </div>

                               
                                <button type="submit" class="form-control mt-4">Submeter pedido</button>

                            </form>
                        </div>

                    </div>
                </div>
            </section>

           
        </div>
    </div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,224L34.3,192C68.6,160,137,96,206,90.7C274.3,85,343,139,411,144C480,149,549,107,617,122.7C685.7,139,754,213,823,240C891.4,267,960,245,1029,224C1097.1,203,1166,181,1234,160C1302.9,139,1371,117,1406,106.7L1440,96L1440,320L1405.7,320C1371.4,320,1303,320,1234,320C1165.7,320,1097,320,1029,320C960,320,891,320,823,320C754.3,320,686,320,617,320C548.6,320,480,320,411,320C342.9,320,274,320,206,320C137.1,320,69,320,34,320L0,320Z"></path></svg>
</section>


<section class="membership-section section-padding" id="section_3">
    <div class="container">
        <div class="row">

         

            

            <div class="col-lg-5 col-12 mx-auto">
                <h4 class="mb-4 pb-lg-2">Pedido de contador</h4>
              <p>
                    O seu pedido será avaliado pelos nossos funcionários o mais breve possível.
              </p>
            </div>

        </div>
    </div>
</section>




@section Scripts {


    @{
        await Html.RenderPartialAsync("_SelectCountryCityLocality");
    }

}
