@model WatersAD.Models.ChangeUserEmailViewModel

@{
    ViewData["Title"] = "UpdateEmployeeEmail";
}
<section class="about-section section-padding sectionDashboard">
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">
                        <flash dismissable="true" />
                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Alterar email funcionário</h2>
                            <p class="text-center">@Model.FullName</p>


                        </div>
                        <div class="col-lg-6 col-12 mx-auto">

                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="UpdateEmployeeEmail" method="post">
                                <input type="hidden" asp-for="EmployeeId" />
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-white mb-4">Dados pessoais</h4>
                                    <a asp-action="Index" class="btn custom-btn smoothscroll mb-4">Voltar</a>
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="email" asp-for="OldEmail" class="form-control" placeholder="Email" required>
                                            <label asp-for="OldEmail"></label>

                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                                            <label asp-for="Email"></label>

                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>


        </div>
    </div>
</section>
