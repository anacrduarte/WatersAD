@model WatersAD.Models.ChangeUserEmailViewModel

@{
    ViewData["Title"] = "UpdateEmployeeEmail";
}

<h1>Update Employee Email</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateEmployeeEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="OldEmail">E-mail</label>
                <input asp-for="OldEmail" class="form-control" />
                <span asp-validation-for="OldEmail" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
