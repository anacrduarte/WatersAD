@model WatersAD.Models.EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">
                    
                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Editar Funcionário</h2>
                            <p class="text-center"><a asp-action="UpdateEmployeeEmail" asp-route-id="@Model.EmployeeId">Alterar email</a> </p>


                        </div>
                        <div class="col-lg-8 col-12 mx-auto"> 

                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="Edit" method="post">
                                <input type="hidden" asp-for="EmployeeId" />
                                <input type="hidden" asp-for="Email" />
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-white mb-4">Dados pessoais</h4>
                                    <a asp-action="Index" class="btn custom-btn smoothscroll mb-4">Voltar</a>
                                </div>
                                <div class="row g-3">
           

                                <partial name="_Employees" />

                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>

        </div>
    </div>
</section>
@section Scripts {
  
    @{
        await Html.RenderPartialAsync("_SelectCountryCityLocality");
    }
}