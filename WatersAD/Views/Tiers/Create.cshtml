@model WatersAD.Data.Entities.Tier

@{
    ViewData["Title"] = "Create";
}
<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Adicionar escalão</h2>


                        </div>
                        <div class="col-lg-6 col-12 mx-auto">

                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="Create" method="post">

                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-white mb-4">Novo escalão</h4>
                                    <a asp-action="Index" class="btn custom-btn smoothscroll mb-4">Voltar</a>
                                </div>
                                <div class="row g-3">


                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" asp-for="TierNumber" class="form-control" placeholder="Nº" required>
                                            <label asp-for="TierNumber">Nº</label>

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" asp-for="TierPrice" class="form-control" placeholder="Preço" required>
                                            <label asp-for="TierPrice">Preço</label>

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" asp-for="TierName" class="form-control" placeholder="Nome" required>
                                            <label asp-for="TierName">Nome</label>

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" asp-for="UpperLimit" class="form-control" placeholder="Limite superior" required>
                                            <label asp-for="UpperLimit">Limite superior</label>

                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>


        </div>
    </div>


</section>


