@model IEnumerable<WatersAD.Data.Entities.Country>

@{
    ViewData["Title"] = "Index";
}



<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="col-lg-12 col-12">

        <h2 class="text-center">Países</h2>
        <p class="text-center"><a asp-action="Create"  class="btn custom-btn  smoothscroll">Adicionar país</a></p>
    </div>
    <div class="col-lg-8 col-12 mx-auto">
    <div class="table-responsive table-containerInvoice">
        <table class="display " id="MyTable">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.NumberCities)
                    </th>


                        <th></th>
                        
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>


                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.NumberCities)
                        </td>

                           
                        <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="bi bi-pencil-square btn custom-btn  smoothscroll"> Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn custom-btn  smoothscroll bi bi-plus-circle"> Detalhes</a>
                           

                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
    </div>



</section>


@section Scripts {

    @{
        await Html.RenderPartialAsync("_DataTableJQuery");
    }
}