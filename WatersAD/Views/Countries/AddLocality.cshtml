@model WatersAD.Models.LocalityViewModel
@{
    ViewData["Title"] = "AddLocality";
}
<section class="about-section section-padding sectionDashboard">
    <flash dismissable="true" />
    <div class="container">
        <div class="row">
            <section>
                <div class="container">
                    <div class="row">

                        <div class="col-lg-12 col-12 text-center mx-auto mb-lg-5 mb-4">
                            <h2 class="">Adicionar localidade</h2>


                        </div>
                        <div class="col-lg-6 col-12 mx-auto">

                            <form class="custom-form membership-form shadow-lg" role="form" asp-action="AddLocality" method="post">
                                <input type="hidden" asp-for="CityId" />
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="text-white mb-4">Cidade: @Model.CityName</h4>
                                    <a asp-action="DetailsCity" asp-route-id="@Model.CityId" class="btn custom-btn smoothscroll mb-4">Voltar</a>
                                </div>
                                <div class="row g-3">


                                    <div class="col-md-12">
                                        <div class="form-floating">
                                            <input type="text" asp-for="Name" class="form-control" placeholder="Nome" required>
                                            <label asp-for="Name">Nome</label>

                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="form-control mt-4">Submeter</button>


                            </form>
                        </div>

                    </div>
                </div>
            </section>


        </div>
    </div>


</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_DataTableJQuery");
    }
}

